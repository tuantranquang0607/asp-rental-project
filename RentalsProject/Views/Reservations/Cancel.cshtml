@model RentalsProject.Models.Reservation

@{
    ViewData["Title"] = "Cancel Reservation";
}

<h1>Cancel Reservation</h1>
<p>Are you sure you want to cancel this reservation?</p>

<table class="table">
    <tr>
        <th>Listing Summary</th>
        <td>@Model.RentalListing.ListingSummary</td>
    </tr>

    <tr>
        <th>City</th>
        <td>@Model.RentalListing.City</td>
    </tr>

    <tr>
        <th>Province</th>
        <td>@Model.RentalListing.Province</td>
    </tr>

    <tr>
        <th>Check-In</th>
        <td>@Model.CheckIn.ToString("g")</td>
    </tr>

    <tr>
        <th>Check-Out</th>
        <td>@Model.CheckOut.ToString("g")</td>
    </tr>
</table>

<form asp-action="CancelConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Yes, Cancel Reservation</button>

    <a asp-action="MyReservations" class="btn btn-secondary">No, Go Back</a>
</form>
