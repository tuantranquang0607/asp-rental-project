@model RentalsProject.Models.RentalListing

@{
    ViewData["Title"] = "Details";
}

<h1>Rental Listing Details</h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Listing Summary</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ListingSummary)</dd>

        @if (Model.AllowModify)
        {
            <dt class="col-sm-2">Listing Details</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ListingDetails)</dd>

            <dt class="col-sm-2">Listing Address</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ListingAddress)</dd>

            <dt class="col-sm-2">Civic Number</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CivicNumber)</dd>

            <dt class="col-sm-2">Street Name</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.StreetName)</dd>
        }

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.City)</dd>

        <dt class="col-sm-2">Province</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Province)</dd>

        <dt class="col-sm-2">Listing Price Per Day</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ListingPricePerDay)</dd>

        <dt class="col-sm-2">Number of Bedrooms</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NumberOfBedrooms)</dd>

        <dt class="col-sm-2">Number of Bathrooms</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NumberOfBathrooms)</dd>

        @if (Model.AllowModify)
        {
            <dt class="col-sm-2">Size (Square Feet)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.SizeInSquareFeet) square feet</dd>
        }

        @if (Model.HasRentalImage)
        {
            <dd>
                <a asp-action="Display" asp-controller="Image" asp-route-id="@Model.RentalImageId">
                    <img src="@Url.Action("Display","Image", new {Id = Model.RentalImageId})" alt="Rental Image" />
                </a>
            </dd>
        }
    </dl>
</div>

<a asp-action="Index" class="btn btn-info">Back to Rental Listings</a>

<a asp-action="OwnerReservations" asp-controller="Reservations" class="btn btn-info">Back to My Property's Reservations</a>

<a asp-action="MyReservations" asp-controller="Reservations" class="btn btn-info">Back to My Rental Reservations</a>

